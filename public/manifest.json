{
    "manifest_version": 3,
    "name": "Twitch Chat Stats",
    "description": "Stats for the Twitch's chat",
    "author": "St√©van Corre <me@stevancorre.com>",
    "version": "0.1",
    "permissions": [
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://*.twitch.tv/*"
            ],
            "js": [
                "index.js"
            ],
            "run_at": "document_end"
        }
    ]
}